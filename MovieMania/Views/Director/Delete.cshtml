@model DirectorDetailsViewModel

@{
    ViewBag.Title = "Delete Director";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-4 col-lg-3 mb-3">
            <img class="card-img-top img-fluid" src="@Model.ImageUrl" alt="Director Image">
        </div>
        <div class="col-md-8 col-lg-9">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Bio" class="control-labele"></label>
                <textarea asp-for="Bio" rows="4" class="form-control" disabled="disabled"></textarea>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" disabled="disabled" type="text">
            </div>
        </div>
        <div class="form-group mt-3 text-center">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </div>
</form>