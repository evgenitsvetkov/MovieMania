@model ActorServiceModel

<div class="col-12 col-md-6 col-lg-4 mb-4">
    <div class="card mb-3">
        <img class="card-img-top" style="height: 30rem" src="@Model.ImageUrl" alt="Actor Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <br />
            <div class="d-flex flex-wrap justify-content-center">
                <a asp-controller="Actor" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success m-1 w-sm-auto">Details</a>
                @if (this.User.Identity.IsAuthenticated && this.User.IsAdmin())
                {
                    <a asp-controller="Actor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning m-1 w-sm-auto">Edit</a>
                    <a asp-controller="Actor" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger m-1 w-sm-auto">Delete</a>
                }
            </div>
        </div>
    </div>
</div>